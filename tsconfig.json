{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "app",
    "sourceMap": true,
    "resolveJsonModule": true,
    "types": ["node", "electron"]
  },
  "include": ["app/**/*.ts"],
  "exclude": ["node_modules", "dist", "*.mjs"]
}
